import glob
import csv

files = glob.glob("assignment_files/temperatures/*.csv") #import files in one line of code

seasons = {"Summer": [4, 5, 15], "Autumn": [6, 7, 8], "Winter": [9, 10, 11], "Spring": [12, 13, 1]}

towntemps = {}

for file in files:
    with open(file, "r") as j:
        reader = csv.reader(j)
        next(reader) #command that skips header for each file

        for rows in reader:
            tname = rows[0]
        
            temps = [float(n) for n in rows[5:]if n]
           
            if tname not in towntemps:
                towntemps[tname] = [[] for y in range(12)]
            for i in range(12):
                towntemps[tname][i].append(temps[i])
for tname in towntemps:
    print(tname)
            
            
            